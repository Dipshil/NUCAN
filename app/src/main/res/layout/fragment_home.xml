<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="com.example.dipshil.nucan.MainNewsFragment"
        android:id="@+id/main_news_fragment"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        tools:layout="@layout/main_news_fragment" />

    <fragment
        android:name="com.example.dipshil.nucan.bottomlist"
        android:id="@+id/bottomlist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        tools:layout="@layout/bottomlist" />

</LinearLayout>
